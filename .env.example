# MediSync Environment Configuration
# Copy this file to .env and adjust values for your environment
#
# WARNING: Do not commit .env files with real credentials to version control

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=medisync
POSTGRES_PASSWORD=medisync_dev_password
POSTGRES_DB=medisync
POSTGRES_PORT=5432

# Database URL (used by Go applications)
DATABASE_URL=postgres://medisync:medisync_dev_password@localhost:5432/medisync?sslmode=disable

# =============================================================================
# NATS Messaging
# =============================================================================
NATS_URL=nats://localhost:4222
NATS_PORT=4222
NATS_MONITOR_PORT=8222
NATS_CLUSTER_PORT=6222

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
# REDIS_PASSWORD=  # Enable in production

# =============================================================================
# Keycloak Authentication
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_dev_password
KEYCLOAK_PORT=8180
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=medisync
KEYCLOAK_CLIENT_ID=medisync-app

# =============================================================================
# ETL Service
# =============================================================================
ETL_METRICS_PORT=9100
ETL_SYNC_INTERVAL=5m
ETL_BATCH_SIZE=1000

# Tally ERP Connection
TALLY_HOST=localhost
TALLY_PORT=9000
TALLY_COMPANY=MediSync

# HIMS API Connection
HIMS_API_URL=http://localhost:8082/api
HIMS_API_KEY=your_hims_api_key_here

# =============================================================================
# Monitoring (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_dev_password

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
LOG_LEVEL=debug
TIMEZONE=Asia/Riyadh

# =============================================================================
# AI/LLM Configuration (for future phases)
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# Council of AIs Consensus System
# =============================================================================
COUNCIL_MIN_AGENTS=3
COUNCIL_DEFAULT_THRESHOLD=0.80
COUNCIL_AGENT_TIMEOUT=3s
COUNCIL_CACHE_TTL=5m
COUNCIL_HEALTH_CHECK_INTERVAL=30s
COUNCIL_SEMANTIC_THRESHOLD=0.95
COUNCIL_MAX_HOPS=3
COUNCIL_AUDIT_RETENTION_YEARS=7
